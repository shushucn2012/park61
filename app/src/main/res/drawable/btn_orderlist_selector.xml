        <shape>
          <stroke android:color="@color/com_orange" android:width="1dp"/>
          <solid android:color="@color/gffffff" />  
          <corners
              android:radius="2dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:color="@color/com_orange" android:width="1dp"/>
          	<solid android:color="@color/com_orange" />
            <corners
              android:radius="2dp"/>
        </shape>       
    </item>
</selector>

