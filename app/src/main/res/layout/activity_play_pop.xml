<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View style="@style/between_line"
            android:layout_height="1dp"
            android:background="@color/city_search_bg"
            android:layout_above="@id/bottom_area"
            />
        <LinearLayout
            android:id="@+id/bottom_area"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            >
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="119dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <TextView
                    android:id="@+id/play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_22215_style"
                    android:text="播放"
                    android:drawableTop="@drawable/bofang1"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="38dp"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_22215_style"
                    android:text="删除"
                    android:drawableTop="@drawable/media_delete"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="60dp"
                    android:gravity="center_horizontal"
                    />
            </LinearLayout>

            <View style="@style/between_line"
                android:layout_height="1dp"
                android:background="@color/city_search_bg" />
            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="@string/action_cancel"
                android:gravity="center"
                style="@style/text_22216_style"
                />
        </LinearLayout>
    </RelativeLayout>
</layout>