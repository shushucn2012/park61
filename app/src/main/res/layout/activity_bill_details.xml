<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style">

        <Button
            android:id="@+id/left_img"
            style="@style/topbar_leftbtn_style"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_top_title"
            style="@style/topbar_title_style"
            android:text="详情" />

        <View
            style="@style/hline_fill_top"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/gffffff"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tv_operate_lable"
            style="@style/text_99914_style"
            android:layout_centerVertical="true"
            android:text="支        出" />

        <TextView
            android:id="@+id/tv_operate_amount"
            style="@style/text_33316_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/com_orange"
            android:textSize="23sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/gffffff"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            style="@style/text_99914_style"
            android:layout_centerVertical="true"
            android:text="余        额" />

        <TextView
            android:id="@+id/tv_available_money"
            style="@style/text_33314_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/g222222"/>
    </RelativeLayout>

    <View style="@style/hline_fill" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gffffff"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                style="@style/text_99914_style"
                android:layout_alignParentLeft="true"
                android:text="交易说明" />

            <TextView
                android:id="@+id/tv_deal_remark"
                android:layout_width="230dp"
                style="@style/text_33314_style"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:textColor="@color/g222222"
                android:text="" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/pay_method_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                style="@style/text_99914_style"
                android:layout_centerVertical="true"
                android:text="支付方式" />

            <TextView
                android:id="@+id/tv_pay_method"
                style="@style/text_33314_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/g222222"
                android:text="" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                style="@style/text_99914_style"
                android:layout_centerVertical="true"
                android:text="交易时间" />

            <TextView
                android:id="@+id/tv_deal_time"
                style="@style/text_33314_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/g222222"
                android:text="" />
        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/order_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <TextView
                style="@style/text_99914_style"
                android:layout_centerVertical="true"
                android:text="订单号" />

            <TextView
                android:id="@+id/tv_order_number"
                style="@style/text_33314_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/g222222"
                android:text="" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>