<?xml version="1.0" encoding="utf-8"?>
<com.handmark.pulltorefresh.library.PullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pull_refresh_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    ptr:ptrHeaderBackground="@color/gffffff"
    ptr:ptrHeaderTextColor="@color/g666666"
    ptr:ptrMode="pullFromStart">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/gffffff"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        style="@style/text_33316_style"
                        android:text="购物评价(" />

                    <TextView
                        android:id="@+id/tv_cmt_num"
                        style="@style/text_33316_style"
                        android:text=" " />

                    <TextView
                        style="@style/text_33316_style"
                        android:text=")" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/area_look_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/text_66614_style"
                        android:layout_marginRight="3dp"
                        android:layout_toLeftOf="@+id/img_goodscomt_rightarrow"
                        android:text="查看全部" />

                    <ImageView
                        android:id="@id/img_goodscomt_rightarrow"
                        style="@style/mem_item_arrow_style"
                        android:layout_marginRight="1dp" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorLine" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linear_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gffffff"
                    android:orientation="vertical" />

                <com.park61.widget.NetLoadingView
                    android:id="@+id/view_loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</com.handmark.pulltorefresh.library.PullToRefreshScrollView>