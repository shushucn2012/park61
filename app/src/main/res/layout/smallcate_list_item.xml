<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smallcate_item_root"
    android:layout_width="match_parent"
    android:layout_height="41dp"
    android:gravity="center_vertical"
    android:minHeight="41dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_cate_name"
        style="@style/text_33314_style"
        android:singleLine="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="@dimen/com_border_margin"
        android:text="品牌" />

    <ImageView
        android:id="@+id/img_gou"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/icon_gou"
        android:visibility="gone"/>
</LinearLayout>
