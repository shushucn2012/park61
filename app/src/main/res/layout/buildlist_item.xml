<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_to_red_selector"
    android:gravity="center_vertical"
    android:minHeight="36dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_rec_date"
        style="@style/text_66612_style"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="3"
        android:text="15/11/20" />

    <TextView
        android:id="@+id/tv_rec_age"
        style="@style/text_66612_style"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:text="1岁1月23天" />

    <TextView
        android:id="@+id/tv_rec_data"
        style="@style/text_66612_style"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:text="70.5厘米" />

    <TextView
        android:id="@+id/tv_rec_state"
        style="@style/text_66612_style"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:text="偏矮"
        android:textColor="@color/com_orange"
        android:gravity="center" />

    <ImageView
        android:id="@+id/img_downarrow"
        style="@style/me_item_arrow_style" 
        android:layout_marginRight="1dp"/>

</LinearLayout>