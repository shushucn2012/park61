<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="253dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/gffffff"
        android:gravity="center_horizontal"
        android:minHeight="250dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/left_area_root"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_goods_left"
                android:layout_width="match_parent"
                android:layout_height="179dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_default_v" />

            <TextView
                android:id="@+id/tv_goods_name_left"
                style="@style/text_33314_style"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:text="变形金刚4 合金版大黄蜂擎天柱汽车人模型儿童玩具" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_goods_price_left"
                    style="@style/text_red16_style"
                    android:text="￥78.9" />

                <TextView
                    android:id="@+id/tv_old_goods_price_left"
                    style="@style/text_99912_style"
                    android:layout_marginLeft="10dp"
                    android:text="￥99.5" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/bg_color" />

        <LinearLayout
            android:id="@+id/right_area_root"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_goods_right"
                android:layout_width="match_parent"
                android:layout_height="179dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_default_v" />

            <TextView
                android:id="@+id/tv_goods_name_right"
                style="@style/text_33314_style"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:lines="2"
                android:maxLines="2"
                android:text="变形金刚4 合金版大黄蜂擎天柱汽车人模型儿童玩具" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_goods_price_right"
                    style="@style/text_red16_style"
                    android:text="￥78.9" />

                <TextView
                    android:id="@+id/tv_old_goods_price_right"
                    style="@style/text_99912_style"
                    android:layout_marginLeft="10dp"
                    android:text="￥99.5" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/hline_fill"
        android:layout_height="3dp"
        android:background="@color/bg_color"/>

</LinearLayout>