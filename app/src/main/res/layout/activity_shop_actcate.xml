                android:layout_marginLeft="10dp"
                android:text="室外游戏" />

            <Button
                style="@style/btn_act_cate_style"
                android:layout_marginLeft="10dp"
                android:text="占位"
                android:visibility="invisible" />

            <Button
                style="@style/btn_act_cate_style"
                android:layout_marginLeft="10dp"
                android:text="占位"
                android:visibility="invisible" />
