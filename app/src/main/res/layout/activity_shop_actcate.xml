        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp" >

            <View
                android:id="@+id/left_line1"
                android:layout_width="3dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:background="@color/com_orange" />

            <TextView
                style="@style/text_66616_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/left_line1"
                android:text="游戏类型" />

            <TextView
                android:id="@+id/tv_cate_all"
                style="@style/text_99912_style"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:text="查看全部  >" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/btn_joy"
                style="@style/btn_act_cate_style"
                android:text="玩具游戏" />

            <Button
                android:id="@+id/btn_manual"
                style="@style/btn_act_cate_style"
                android:layout_marginLeft="10dp"
                android:text="手工游戏" />

            <Button
                android:id="@+id/btn_enlighten"
                style="@style/btn_act_cate_style"
                android:layout_marginLeft="10dp"
                android:text="启育" />

            <Button
                android:id="@+id/btn_kindred"
                style="@style/btn_act_cate_style"
                android:layout_marginLeft="10dp"
                android:text="亲子游" />
        </LinearLayout>

