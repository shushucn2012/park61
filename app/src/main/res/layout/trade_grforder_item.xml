<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gffffff"
    android:orientation="vertical">

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/gffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:paddingLeft="12dp"
            android:text="申请时间 ：2016-03-01 12:12"
            android:textColor="@color/g666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:gravity="right|center_vertical"
            android:paddingRight="12dp"
            android:text="退款成功"
            android:textColor="@color/com_orange"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        style="@style/hline_fill"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/gffffff">

        <ImageView
            android:id="@+id/img_icon1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_default_v" />

        <ImageView
            android:id="@+id/img_icon2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/img_icon1"
            android:scaleType="fitXY"
            android:src="@drawable/img_default_v" />

        <ImageView
            android:id="@+id/img_icon3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/img_icon2"
            android:scaleType="fitXY"
            android:src="@drawable/img_default_v" />

        <TextView
            android:id="@+id/tv_dots"
            style="@style/text_33314_style"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_icon3"
            android:maxLines="2"
            android:text="..."
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_num"
            style="@style/text_33314_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toLeftOf="@+id/img_pic_downarrow"
            android:maxLines="2"
            android:text="2个包裹(共8件)"
            android:textSize="12sp" />

        <ImageView
            android:id="@id/img_pic_downarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_next" />
    </RelativeLayout>

    <View
        style="@style/hline_fill"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/gffffff"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/tv_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toLeftOf="@+id/tv_deal_amount"
            android:text="交易金额："
            android:textColor="@color/g333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_deal_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv"
            android:text="￥"
            android:textColor="@color/g333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toLeftOf="@+id/tv_grf_amount"
            android:text="退款金额："
            android:textColor="@color/g333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_grf_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="￥"
            android:textColor="@color/com_orange"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>