<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/area_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/area_img"
            android:layout_marginTop="-1dp"
            android:background="@drawable/rec_gray_stroke_trans_solid_cornerbottom5"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_title"
                style="@style/text_33315_style"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:text="一份刻苦铭心的爱" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="-2dp">

                <ImageView
                    android:id="@+id/img_user"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/headimg_default_img" />

                <TextView
                    android:id="@+id/tv_teacher"
                    style="@style/text_99912_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:layout_toLeftOf="@+id/area_viewnum"
                    android:layout_toRightOf="@+id/img_user"
                    android:singleLine="true"
                    android:text="DOM老师" />

                <LinearLayout
                    android:id="@+id/area_viewnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:layout_marginTop="1dp"
                        android:src="@drawable/icon_read" />

                    <TextView
                        android:id="@+id/tv_read_num"
                        style="@style/text_99912_style"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="33" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/area_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_date"
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default_h"
                app:riv_corner_radius_top_left="5dp"
                app:riv_corner_radius_top_right="5dp"
                app:riv_oval="false" />

            <ImageView
                android:id="@+id/img_can_play"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_play_big"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="48dp"
                android:layout_height="18dp"
                android:background="@drawable/rec_shadow_stroke_shadow_corner15"
                android:gravity="center"
                android:text="区角"
                android:textColor="@color/gffffff"
                android:textSize="10sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>