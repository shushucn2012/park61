<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style" >

        <Button
            android:id="@+id/left_img"
            style="@style/topbar_leftbtn_style"
            android:visibility="visible" />

        <TextView
            android:id="@+id/address_title"
            style="@style/topbar_title_style"
            android:text="地址管理" />
        <View
            style="@style/hline_fill_top"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/choose_selftake_point_area"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/top_bar"
        android:background="@color/gffffff"
        android:visibility="gone" >

        <TextView
            style="@style/text_33314_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="选择自提地址" />

        <TextView
            android:id="@+id/store_name_tv"
            style="@style/text_66614_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/img_arrow"
            android:text=""
            android:textColor="@color/g333333" />

        <ImageView
            android:id="@+id/img_arrow"
            style="@style/me_item_arrow_style"
            android:layout_marginRight="12dp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/address_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/create_btn"
        android:layout_below="@+id/choose_selftake_point_area"
        android:layout_marginTop="1dp"
        android:background="@color/bg_color"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:listSelector="#00000000" >
    </ListView>

    <Button
        android:id="@+id/create_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_apply_selector"
        android:gravity="center"
        android:text="+新建地址"
        android:textColor="@color/gffffff"
        android:textSize="16sp" />

</RelativeLayout>