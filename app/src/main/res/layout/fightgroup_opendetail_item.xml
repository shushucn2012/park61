<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/bg_color"
    >
    <ImageView
        android:visibility="gone"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="fitXY"
        android:src="@drawable/headimg_default_img"
        android:layout_marginLeft="12dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:id="@+id/img"
        android:layout_marginTop="10dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/pintuanicon"
        android:layout_marginLeft="12dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_toRightOf="@+id/img"
        android:layout_marginLeft="8dp"
        style="@style/text_33314_style"
        android:text="蓝石头"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/tv_join_info"
        android:layout_marginLeft="8dp"
        style="@style/text_99914_style"
        android:text="开团"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        />
    <TextView
        android:id="@+id/tv_opentime"
        android:layout_toLeftOf="@+id/tv_join_info"
        style="@style/text_99914_style"
        android:text="2016-07-21 14:20:34"
        android:layout_centerVertical="true"
        />
</RelativeLayout>
