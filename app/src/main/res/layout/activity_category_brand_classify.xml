<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gffffff"
    android:orientation="vertical">

    <RelativeLayout style="@style/topbar_area_style">

        <Button
            android:id="@+id/left_img"
            style="@style/topbar_leftbtn_style"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/sousuo_area"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_cart"
            android:layout_toRightOf="@id/left_img"
            android:background="@drawable/rec_gray_stroke_gray_solid_corner30"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/sousuo_white" />

            <TextView
                style="@style/text_99914_style"
                android:layout_marginLeft="10dp"
                android:text="搜索你感兴趣的" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_cart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/btn_msg"
            android:background="@drawable/cart_site" />

        <Button
            android:id="@+id/btn_msg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@drawable/xiaoxihuise" />
    </RelativeLayout>

    <View
        style="@style/hline_fill"
        android:background="@color/colorLine" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.park61.widget.viewpager.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/tab_brandclassify_bg"/>

        <LinearLayout
            android:layout_width="202dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:background="@drawable/tab_brandclassify_bg_out">

        </LinearLayout>

    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
