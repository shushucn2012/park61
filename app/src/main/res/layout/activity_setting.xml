<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style">

        <Button
            android:id="@+id/left_img"
            style="@style/topbar_leftbtn_style"
            android:visibility="visible" />

        <TextView
            style="@style/topbar_title_style"
            android:text="设置" />

        <View
            style="@style/hline_fill_top"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/gffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/account_area"
            style="@style/me_item_area_style"
            android:layout_height="44dp"
            android:visibility="gone">

            <TextView
                style="@style/text_33316_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="账户安全"
                android:textSize="15sp" />

            <ImageView style="@style/setting_item_arrow_style" />
        </RelativeLayout>

        <View
            style="@style/hline_fill"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/notify_area"
            style="@style/me_item_area_style"
            android:layout_height="44dp"
            android:visibility="gone">

            <TextView
                style="@style/text_33316_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="消息通知设置"
                android:textSize="15sp" />

            <ImageView style="@style/setting_item_arrow_style" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cache_area"
            style="@style/me_item_area_style"
            android:layout_height="44dp"
            android:visibility="gone">

            <TextView
                style="@style/text_33316_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="清除缓存"
                android:textSize="15sp" />

            <ImageView style="@style/setting_item_arrow_style" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bg_color"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/wifi_area"
            style="@style/me_item_area_style"
            android:layout_height="44dp"
            android:visibility="gone">

            <TextView
                style="@style/text_33316_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="只使用wifi上传大文件"
                android:textSize="15sp" />

            <ImageView style="@style/setting_item_arrow_style" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/version_area"
            style="@style/me_item_area_style"
            android:layout_height="44dp"
            android:visibility="gone">

            <TextView
                style="@style/text_33316_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="检测更新"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_version_name"
                style="@style/text_99914_style"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img_version_item_arrow"
                android:text="好赞，已是最新版本" />

            <ImageView
                android:id="@+id/img_version_item_arrow"
                style="@style/setting_item_arrow_style"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            style="@style/hline_fill"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/suggest_area"
            style="@style/me_item_area_style"
            android:layout_height="44dp"
            android:visibility="gone">

            <TextView
                style="@style/text_33316_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="意见反馈"
                android:textSize="15sp" />

            <ImageView style="@style/setting_item_arrow_style" />
        </RelativeLayout>

        <View
            style="@style/hline_fill"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/about_area"
            style="@style/me_item_area_style"
            android:layout_height="44dp">

            <TextView
                style="@style/text_33316_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="关于61区"
                android:textSize="15sp" />

            <ImageView style="@style/setting_item_arrow_style" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_logout"
        style="@style/btn_com_style"
        android:text="退出账号" />

</LinearLayout>