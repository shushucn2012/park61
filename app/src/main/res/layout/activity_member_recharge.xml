<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style" >

        <Button
            android:id="@+id/left_img"
            style="@style/topbar_leftbtn_style"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_page_title"
            style="@style/topbar_title_style"
            android:text="开通会员" />
        <View
            style="@style/hline_fill_top"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gffffff" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!--<include layout="@layout/member_type_layout" />-->

            <com.park61.widget.gridview.GridViewForScrollView
                android:id="@+id/gv_cardtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:horizontalSpacing="12dp"
                android:listSelector="#00000000"
                android:numColumns="2"
                android:verticalSpacing="12dp" />

            <View style="@style/hline_fill"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" >

                <TextView
                    android:id="@+id/tv_shop_label"
                    style="@style/text_33316_style"
                    android:layout_centerVertical="true"
                    android:text="店铺:" />

                <TextView
                    android:id="@+id/tv_shop_name"
                    style="@style/text_33316_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_shop_label"
                    android:text="保利家园" />

                <TextView
                    android:id="@+id/tv_change_shop"
                    style="@style/text_99914_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="更换店铺"
                    android:textColor="@color/com_green" />
            </RelativeLayout>

            <View style="@style/hline_fill"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp" >

                <TextView
                    style="@style/text_33316_style"
                    android:text="宝宝:" />

                <com.park61.widget.gridview.GridViewForScrollView
                    android:id="@+id/gv_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:horizontalSpacing="10dp"
                    android:listSelector="#00000000"
                    android:numColumns="3"
                    android:verticalSpacing="10dp" />
            </LinearLayout>

            <View style="@style/hline_margin12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp" >

                <TextView
                    style="@style/text_33316_style"
                    android:text="月数:" />

                <com.park61.widget.gridview.GridViewForScrollView
                    android:id="@+id/gv_card_len"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:horizontalSpacing="10dp"
                    android:listSelector="#00000000"
                    android:numColumns="3"
                    android:verticalSpacing="10dp" />
            </LinearLayout>

            <View style="@style/hline_margin12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gffffff"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        style="@style/text_33316_style"
                        android:text="金额：" />

                    <TextView
                        android:id="@+id/tv_real_pay_money"
                        style="@style/text_33316_style"
                        android:text="0.00"
                        android:textColor="@color/com_orange"
                        android:textSize="18sp" />

                    <TextView
                        style="@style/text_33314_style"
                        android:text="元" />

                    <TextView
                        android:id="@+id/tv_old_pay_money"
                        style="@style/text_99914_style"
                        android:layout_marginLeft="15dp"
                        android:text="0.00元" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/tv_remark_label"
                        style="@style/text_33316_style"
                        android:text="赠送:" />

                    <TextView
                        android:id="@+id/tv_remark"
                        style="@style/text_33314_style"
                        android:layout_marginLeft="10dp"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_start_vip"
                style="@style/btn_com_style"
                android:text="立即开通" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>