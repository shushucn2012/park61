<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="confirmNum"
            type="android.view.View.OnClickListener"
            />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="260dp"
            android:layout_height="200dp"
            android:background="@drawable/shape_dream_flag"
            android:gravity="center_horizontal"
            >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="修改购买数量"
                android:gravity="center"
                style="@style/text_22216_style"
                android:layout_marginTop="20dp"
                />

            <EditText
                android:id="@+id/toy_input_num"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_input_num"
                android:gravity="center_horizontal|bottom"
                android:paddingBottom="10dp"
                android:inputType="number"
                android:digits="0123456789"
                android:layout_centerInParent="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:text="确定"
                android:onClick="@{confirmNum}"
                style="@style/text_fff15_style"
                android:background="@color/color_text_red_deep"
                />

        </RelativeLayout>

    </LinearLayout>
</layout>