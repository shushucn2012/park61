<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style">

        <LinearLayout
            android:id="@+id/area_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_left_red" />

            <TextView
                style="@style/text_33316_style"
                android:text="返回" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        style="@style/text_33318_style"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="80dp"
        android:text="输入短信验证码" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="14dp">

        <TextView
            style="@style/text_99912_style"
            android:text="我们已经向" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/text_99912_style"
            android:text=""
            android:textColor="@color/color_text_red_deep" />

        <TextView
            style="@style/text_99912_style"
            android:text="发送了六位数的验证码" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/input_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:visibility="visible">

        <EditText
            android:id="@+id/edit_vcode"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:cursorVisible="false"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="@color/gffffff"
            android:textColorHint="#ddd4d4"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_pwd_1"
                android:layout_width="32dp"
                android:layout_height="34dp"
                android:background="@drawable/rec_gray_stroke_trans_solid_nocorner"
                android:gravity="center"
                android:textColor="@color/g333333"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_pwd_2"
                android:layout_width="32dp"
                android:layout_height="34dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rec_gray_stroke_trans_solid_nocorner"
                android:gravity="center"
                android:textColor="@color/g333333"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_pwd_3"
                android:layout_width="32dp"
                android:layout_height="34dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rec_gray_stroke_trans_solid_nocorner"
                android:gravity="center"
                android:textColor="@color/g333333"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_pwd_4"
                android:layout_width="32dp"
                android:layout_height="34dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rec_gray_stroke_trans_solid_nocorner"
                android:gravity="center"
                android:textColor="@color/g333333"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_pwd_5"
                android:layout_width="32dp"
                android:layout_height="34dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rec_gray_stroke_trans_solid_nocorner"
                android:gravity="center"
                android:textColor="@color/g333333"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_pwd_6"
                android:layout_width="32dp"
                android:layout_height="34dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rec_gray_stroke_trans_solid_nocorner"
                android:gravity="center"
                android:textColor="@color/g333333"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/area_sendvcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_get_vcode"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:background="@null"
            android:text="重新发送"
            android:textColor="@color/color_text_red_deep"
            android:textSize="12sp" />

        <com.park61.widget.textview.AccoutSafeTimeTextView
            android:id="@+id/ttv_time"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:textColor="@color/g999999"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>