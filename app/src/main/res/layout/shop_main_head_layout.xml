<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:background="@color/gffffff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/shop_bg_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default_h" />

        <LinearLayout
            android:layout_width="49dp"
            android:layout_height="54dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#432c1f"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                style="@style/text_99912_style"
                android:layout_gravity="center_horizontal"
                android:text="人气"
                android:textColor="@color/gffffff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@color/gffffff" />

            <TextView
                android:id="@+id/tv_num"
                style="@style/text_99916_style"
                android:text="100"
                android:textStyle="bold"
                android:textColor="@color/gffffff" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/text_99914_style"
                    android:text=""
                    android:textColor="@color/gffffff" />

                <TextView
                    android:id="@+id/tv_content"
                    style="@style/text_99912_style"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/gffffff" />
            </LinearLayout>

            <ImageView
                android:id="@+id/arrow_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/baisexiaojiantou" />

        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/store_img"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default_v" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/store_img"
            android:layout_toLeftOf="@+id/vline_left"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_store_name"
                    style="@style/text_33314_style"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="" />

                <ImageView
                    android:id="@+id/super_store_img"
                    android:layout_width="57dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_store_name"
                    android:src="@drawable/mingxingdianpu" />

                <ImageView
                    android:id="@+id/erweima_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/super_store_img"
                    android:src="@drawable/erweima_img" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/dianpudizhi_img" />

                <TextView
                    android:id="@+id/tv_addr"
                    style="@style/text_33312_style"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/vline_left"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/phone_img"
            android:background="@color/bg_color" />

        <ImageView
            android:id="@+id/phone_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="12dp"
            android:src="@drawable/bodadianhua1" />

    </RelativeLayout>
</RelativeLayout>
