<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top_bar"
            style="@style/topbar_area_style">

            <Button
                android:id="@+id/left_img"
                style="@style/topbar_leftbtn_style"
                android:visibility="visible" />

            <TextView
                style="@style/topbar_title_style"
                android:text="提现" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/area_ali_account"
            style="@style/me_item_area_style"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/back">

            <ImageView
                android:id="@+id/img_ali_pay"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/zhifubao_h" />

            <TextView
                style="@style/text_33314_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_ali_pay"
                android:text="支付宝" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/img_aliinfo_arrow"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_aliaccount"
                    style="@style/text_33314_style"
                    android:layout_centerVertical="true"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_limit_label"
                    style="@style/text_66612_style"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="3dp"
                    android:text="单笔限额：1万" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_aliinfo_arrow"
                style="@style/setting_item_arrow_style" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back"
            android:orientation="vertical">

            <TextView
                style="@style/text_33314_style"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:text="提现金额" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    style="@style/text_33314_style"
                    android:text="￥"
                    android:textSize="26dp" />

                <EditText
                    android:id="@+id/edit_money"
                    style="@style/edit_com_style"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:inputType="numberDecimal"
                    android:maxLength="20"
                    android:text=""
                    android:textSize="30dp" />
            </LinearLayout>

            <View style="@style/hline_margin12" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:id="@+id/tv_canout_money"
                    style="@style/text_33314_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="可提现金额" />

                <TextView
                    android:id="@+id/tv_get_all_money"
                    style="@style/text_33314_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dp"
                    android:text="全部提现"
                    android:textColor="@color/text_blue" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            style="@style/me_item_area_style"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/back">

            <TextView
                android:id="@+id/tv_vcode_label"
                style="@style/text_33314_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="验证码"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edit_vcode"
                style="@style/edit_com_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/img_del"
                android:layout_toRightOf="@id/tv_vcode_label"
                android:background="@null"
                android:hint="输入验证码"
                android:textColorHint="@color/g999999"
                android:textSize="14sp"
                android:inputType="number"/>

            <ImageView
                android:id="@+id/img_del"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/area_vline"
                android:scaleType="fitXY"
                android:src="@drawable/shanchu"
                android:visibility="invisible"/>

            <View
                android:id="@+id/area_vline"
                style="@style/vline_margin8"
                android:layout_toLeftOf="@+id/area_sendvcode"
                android:background="@color/gcccccc" />

            <LinearLayout
                android:id="@+id/area_sendvcode"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_sendvcode"
                    style="@style/text_red14_style"
                    android:text="发送验证码"
                    android:visibility="visible" />

                <com.park61.widget.textview.AccoutSafeTimeTextView
                    android:id="@+id/ttv_time"
                    style="@style/text_66614_style"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_limit_time"
            style="@style/text_red12_style"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:text="！预计24小时内到账"
            android:textColor="@color/com_orange" />

        <Button
            android:id="@+id/btn_get"
            style="@style/btn_com_style"
            android:text="提现" />

    </LinearLayout>

    <View
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:visibility="gone" />

</FrameLayout>