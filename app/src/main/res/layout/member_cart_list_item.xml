<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/rectangle_shape_gray">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/area_price"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cart_title"
                style="@style/text_33314_style"
                android:layout_marginLeft="12dp"
                android:text="500元储蓄卡" />

            <TextView
                android:id="@+id/tv_sales_text"
                style="@style/text_99912_style"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="送：3节体验课3节体验课3节体验课3节体验课3节体验课3节体验课3节体验课3节体验课"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/line"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_current_price"
                style="@style/text_33316_style"
                android:layout_gravity="right"
                android:text="￥500"
                android:textColor="@color/com_orange" />

            <TextView
                android:id="@+id/tv_src_price"
                style="@style/text_99912_style"
                android:layout_gravity="right"
                android:text="￥500" />
        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/btn_open"
            android:background="@color/sallow_red" />

        <Button
            android:id="@+id/btn_open"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@color/btn_yellow"
            android:text="开通"
            android:textColor="@color/g333333"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>
