<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style" >

        <Button
            android:id="@+id/left_img"
            style="@style/topbar_leftbtn_style"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_page_title"
            style="@style/topbar_title_style"
            android:text="更换店铺" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/area_shop"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/top_bar"
        android:background="@color/bg_color" >

        <TextView
            android:id="@+id/tv_currshop"
            style="@style/text_33314_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="已筛选“”的店铺" />

        <TextView
            android:id="@+id/tv_change"
            style="@style/text_org14_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="重新筛选" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_shops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_confirm"
        android:layout_below="@id/area_shop"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/list_divider"
        android:dividerHeight="1dp"
        android:listSelector="@color/transparent" />

    <Button
        android:id="@id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/com_orange"
        android:text="确定"
        android:textColor="@color/gffffff"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/area_country"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/area_shop"
        android:background="@color/transbg"
        android:visibility="gone" >

        <ListView
            android:id="@+id/lv_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/list_divider"
            android:dividerHeight="1dp"
            android:listSelector="@color/transparent" />
    </LinearLayout>

</RelativeLayout>