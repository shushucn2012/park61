<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gffffff"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:gravity="center">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/yueme"
                android:visibility="gone" />

            <TextView
                style="@style/text_33316_style"
                android:layout_centerInParent="true"
                android:text="约么" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:gravity="center">

            <TextView
                style="@style/text_99912_style"
                android:text="更多" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/gdjiantou" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_area0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default_h" />

            <TextView
                android:id="@+id/tv_title0"
                style="@style/text_66614_style"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="一份刻苦铭心的爱"
                android:textColor="@color/gffffff" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_area1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default_h" />

            <TextView
                android:id="@+id/tv_title1"
                style="@style/text_fff14_style"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="一份刻苦铭心的爱" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_area2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default_h" />

            <TextView
                android:id="@+id/tv_title2"
                style="@style/text_66614_style"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="一份刻苦铭心的爱"
                android:textColor="@color/gffffff" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_area3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default_h" />

            <TextView
                android:id="@+id/tv_title3"
                style="@style/text_fff14_style"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="一份刻苦铭心的爱" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>