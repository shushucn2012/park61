<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/top_bar"
        layout="@layout/topbar_com" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_area"
        android:layout_below="@+id/top_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg_btn_rec"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_state"
                    style="@style/text_fff16_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="待归还" />

                <ImageView
                    android:id="@+id/img_state"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/shenqingchenggong" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/area_state_tip"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/gffffff">

                <TextView
                    android:id="@+id/tv_state_tip"
                    style="@style/text_33316_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="一共玩了17天18小时42分" />

                <ImageView
                    style="@style/mem_item_arrow_style"
                    android:layout_marginRight="12dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_66614_style"
                    android:layout_marginLeft="12dp"
                    android:text="领取地址" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/details_addr_area"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/gffffff"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gffffff">

                    <TextView
                        android:id="@+id/browse_name_tv"
                        style="@style/text_33316_style"
                        android:layout_centerVertical="true"
                        android:text="李茉莉" />

                    <TextView
                        android:id="@+id/browse_number_tv"
                        style="@style/text_33316_style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:text="18675689087" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/browse_address_tv"
                    style="@style/text_66614_style"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="武汉市江夏区纸坊北小区A1栋14楼" />
            </LinearLayout>

            <ImageView
                android:id="@+id/addr_img"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/addr_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="@color/gffffff"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_toy"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_default_v" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_toy_name"
                        style="@style/text_66614_style"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="三岁宝宝右脑潜能开发三岁宝宝右脑潜能开发三岁宝宝右脑潜能开发三岁宝宝右脑潜能开发" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <LinearLayout
                            android:id="@+id/area_per_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true">

                            <TextView
                                style="@style/text_org16_style"
                                android:text="每天" />

                            <TextView
                                android:id="@+id/tv_share_price"
                                style="@style/text_org16_style"
                                android:text="1"
                                android:textSize="24sp" />

                            <TextView
                                style="@style/text_org16_style"
                                android:text="块钱" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_real_price"
                            style="@style/text_99912_style"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/area_per_price"
                            android:paddingTop="8dp"
                            android:text="￥399" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/area_money_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/gffffff"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="15dp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/text_66614_style"
                            android:text="总天数" />

                        <TextView
                            android:id="@+id/tv_day_count"
                            style="@style/text_66614_style"
                            android:layout_marginRight="20dp"
                            android:layout_toLeftOf="@+id/tv_day_amount"
                            android:text="x18" />

                        <TextView
                            android:id="@id/tv_day_amount"
                            style="@style/text_66614_style"
                            android:layout_alignParentRight="true"
                            android:text="￥18" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            style="@style/text_66614_style"
                            android:text="管理费" />

                        <TextView
                            android:id="@+id/tv_manage_amount"
                            style="@style/text_66614_style"
                            android:layout_alignParentRight="true"
                            android:text="￥1" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            style="@style/text_66614_style"
                            android:text="小计" />

                        <TextView
                            android:id="@+id/tv_party_amount"
                            style="@style/text_red14_style"
                            android:layout_alignParentRight="true"
                            android:text="￥19" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/area_money_ext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/gffffff"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="15dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_jian"
                            style="@style/text_red16_style"
                            android:text="减" />

                        <TextView
                            style="@style/text_66614_style"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@id/tv_jian"
                            android:text="分享朋友圈立减优惠" />

                        <TextView
                            android:id="@+id/tv_share_days"
                            style="@style/text_66614_style"
                            android:layout_marginRight="20dp"
                            android:layout_toLeftOf="@+id/tv_share_reduce_amount"
                            android:text="x9" />

                        <TextView
                            android:id="@+id/tv_share_reduce_amount"
                            style="@style/text_66614_style"
                            android:layout_alignParentRight="true"
                            android:text="-￥9" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/area_lost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:visibility="visible">

                        <TextView
                            style="@style/text_66614_style"
                            android:text="遗失配件" />

                        <TextView
                            android:id="@+id/tv_lost_parts_num"
                            style="@style/text_66614_style"
                            android:layout_marginRight="20dp"
                            android:layout_toLeftOf="@+id/tv_lost_parts_amount"
                            android:text="x2" />

                        <TextView
                            android:id="@+id/tv_lost_parts_amount"
                            style="@style/text_66614_style"
                            android:layout_alignParentRight="true"
                            android:text="-￥2" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/gffffff"
                    android:paddingBottom="15dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:id="@+id/tv_jifei_rule_label"
                        style="@style/text_66614_style"
                        android:layout_centerVertical="true"
                        android:text="计费规则" />

                    <ImageView
                        android:id="@+id/img_rule"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_jifei_rule_label"
                        android:src="@drawable/jifeiguize" />

                    <TextView
                        android:id="@+id/tv_total_amount_label"
                        style="@style/text_66614_style"
                        android:layout_marginRight="20dp"
                        android:layout_toLeftOf="@+id/tv_total_amount"
                        android:text="预计支付金额" />

                    <TextView
                        android:id="@+id/tv_total_amount"
                        style="@style/text_red16_style"
                        android:layout_alignParentRight="true"
                        android:text="￥12" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottom_area"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gffffff">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_scan_get"
                style="@style/order_item_bottom_btn"
                android:text="扫码领取"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_apply_back"
                style="@style/order_item_bottom_btn"
                android:text="申请归还"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_apply_again"
                style="@style/order_item_bottom_btn"
                android:text="再次申请"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_pay"
                style="@style/order_item_bottom_btn"
                android:text="支付"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>