<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style">

        <LinearLayout
            android:id="@+id/area_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/com_border_margin"
                android:src="@drawable/icon_red_backimg" />
        </LinearLayout>

        <TextView
            android:id="@+id/page_title"
            style="@style/topbar_title_style"
            android:text="@string/app_name" />

        <LinearLayout
            android:id="@+id/area_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/com_border_margin"
            android:visibility="gone">

            <TextView
                style="@style/text_66616_style"
                android:text="取消报名" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_one_key_buy"
        android:layout_below="@+id/top_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ffeff6"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_state"
                    style="@style/text_fff16_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/com_border_margin"
                    android:text=""
                    android:textColor="@color/color_text_red_deep" />

                <ImageView
                    android:id="@+id/img_state"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/tuikuanchenggong" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/details_addr_area"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/gffffff"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/com_border_margin"
                android:paddingRight="@dimen/com_border_margin"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gffffff">

                    <TextView
                        android:id="@+id/browse_name_tv"
                        style="@style/text_33316_style"
                        android:layout_centerVertical="true"
                        android:text="联系人：" />

                    <TextView
                        android:id="@+id/browse_number_tv"
                        style="@style/text_33316_style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="电话：" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_actdetail"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:layout_marginTop="10dp"
                android:background="@color/gffffff"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_toy"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="@dimen/com_border_margin"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_default_v" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="@dimen/com_border_margin"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_toy_name"
                        style="@style/text_33315_style"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="" />

                    <TextView
                        android:id="@+id/tv_addr"
                        style="@style/text_99912_style"
                        android:layout_marginTop="8dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/tv_start_time"
                        style="@style/text_99912_style"
                        android:layout_marginTop="2dp"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/gffffff"
                android:orientation="vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="@dimen/com_border_margin"
                android:paddingRight="@dimen/com_border_margin"
                android:paddingTop="12dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/text_99913_style"
                        android:text="报名时间：" />

                    <TextView
                        android:id="@+id/tv_apply_time"
                        style="@style/text_99913_style"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/area_sign_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/text_99913_style"
                        android:text="签到时间：" />

                    <TextView
                        android:id="@+id/tv_sign_time"
                        style="@style/text_99913_style"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_buy_title"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:visibility="gone">

                <TextView
                    style="@style/text_22214_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐活动装备" />

                <TextView
                    style="@style/text_22212_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="您还未购买装备"
                    android:textColor="@color/color_text_red_deep" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/toys_lv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv_one_key_buy"
        style="@style/text_fff16_style"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_text_red_deep"
        android:gravity="center"
        android:text="@string/one_key_buy"
        android:visibility="gone" />

</RelativeLayout>