<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ly_msg"
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp" >

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_33316_style"
            android:text="验证码已发送到尾号0000的手机"
            android:textColor="@color/g000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:weightSum="5" >

            <EditText
                android:id="@+id/edit_vcode"
                style="@style/edit_com_style"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:hint="请输入验证码" />

            <LinearLayout
                android:id="@+id/btn_send"
                style="@style/btn_com_style"
                android:layout_width="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="2"
                android:background="@drawable/edit_search_shape"
                android:clickable="false" >

                <com.park61.widget.textview.TimeTextView
                    android:id="@+id/ttv_time"
                    style="@style/text_66614_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_send"
                    style="@style/text_66614_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重新发送" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_cancel"
            style="@style/button_bule_style"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:text="取消"
            android:textColor="@color/g333333"
            android:textSize="16sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:background="@color/bg_color" />

        <Button
            android:id="@+id/button_confirm"
            style="@style/button_bule_style"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:text="确定"
            android:textColor="@color/g333333"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>