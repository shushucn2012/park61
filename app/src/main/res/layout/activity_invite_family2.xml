<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/invite_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style">

        <Button
            android:id="@+id/left_img"
            style="@style/topbar_leftbtn_style"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_page_title"
            style="@style/topbar_title_style"
            android:text="邀请亲" />

        <View
            style="@style/hline_fill_top"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/gffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_user"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:src="@drawable/img_default_v" />

            <TextView
                android:id="@+id/tv_user_name"
                style="@style/text_33314_style"
                android:layout_marginTop="5dp"
                android:text="" />

            <TextView
                android:id="@+id/tv_user_relation"
                style="@style/text_red14_style"
                android:layout_marginTop="5dp"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img0"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:src="@drawable/img_default_v" />

            <TextView
                android:id="@+id/tv_relation0"
                style="@style/text_33314_style"
                android:layout_marginTop="5dp"
                android:text="" />

            <Button
                android:id="@+id/btn_relation0"
                style="@style/btn_com_style"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/rec_red_stroke_trans_solid_corner30"
                android:text="邀请"
                android:textColor="@color/com_orange"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@color/gffffff">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/img_default_v" />

        <TextView
            android:id="@+id/tv_relation1"
            style="@style/text_33314_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img1"
            android:text="" />

        <Button
            android:id="@+id/btn_relation1"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rec_red_stroke_trans_solid_corner30"
            android:text="邀请"
            android:textColor="@color/com_orange"
            android:textSize="12sp" />
    </RelativeLayout>

    <View style="@style/hline_fill" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/gffffff">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/img_default_v" />

        <TextView
            android:id="@+id/tv_relation2"
            style="@style/text_33314_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img2"
            android:text="" />

        <Button
            android:id="@+id/btn_relation2"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rec_red_stroke_trans_solid_corner30"
            android:text="邀请"
            android:textColor="@color/com_orange"
            android:textSize="12sp" />
    </RelativeLayout>

    <View style="@style/hline_fill" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/gffffff">

        <ImageView
            android:id="@+id/img3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/img_default_v" />

        <TextView
            android:id="@+id/tv_relation3"
            style="@style/text_33314_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img3"
            android:text="" />

        <Button
            android:id="@+id/btn_relation3"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rec_red_stroke_trans_solid_corner30"
            android:text="邀请"
            android:textColor="@color/com_orange"
            android:textSize="12sp" />
    </RelativeLayout>

    <View style="@style/hline_fill" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/gffffff">

        <ImageView
            android:id="@+id/img4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/img_default_v" />

        <TextView
            android:id="@+id/tv_relation4"
            style="@style/text_33314_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img4"
            android:text="" />

        <Button
            android:id="@+id/btn_relation4"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rec_red_stroke_trans_solid_corner30"
            android:text="邀请"
            android:textColor="@color/com_orange"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        style="@style/text_red14_style"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:text="邀亲友共同见证宝宝成长" />

    <Button
        android:id="@+id/btn_relation_other"
        style="@style/btn_com_style"
        android:background="@drawable/tab_brandclassify_bg"
        android:textColor="@color/com_orange"
        android:text="邀请其他亲友" />

</LinearLayout>
