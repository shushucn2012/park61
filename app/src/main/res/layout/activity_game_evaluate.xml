<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style" >

        <Button
            android:id="@+id/left_img"
            style="@style/topbar_leftbtn_style"
            android:visibility="visible" />

        <TextView
            style="@style/topbar_title_style"
            android:text="游戏评价" />
        <View
            style="@style/hline_fill_top"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gffffff" >

                <ImageView
                    android:id="@+id/img_acts"
                    android:scaleType="centerCrop"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_done" />

                <EditText
                    android:id="@+id/edit_input_word"
                    style="@style/text_33314_style"
                    android:background="@color/gffffff"
                    android:gravity="top"
                	android:maxLength="300"              	
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@+id/img_acts"
                    android:minLines="5"
                    android:hint="宝宝游戏中的趣事~（300字以内）" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gffffff" >

                <GridView
                    android:id="@+id/gv_input_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="30dp"
                    android:background="@color/gffffff"
                    android:columnWidth="80dp"
                    android:horizontalSpacing="10dp"
                    android:numColumns="4"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_below="@+id/gv_input_pic"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="(上传图片  最多可上传4张)"
                    android:textColor="@color/g999999"
                    android:textSize="12sp" />
            </RelativeLayout>
            <com.park61.widget.list.ListViewForScrollView
                android:id="@+id/listview"
                android:layout_above="@+id/commit_area"
                android:layout_marginTop="10dp"
                android:background="@color/gffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
                android:divider="#00000000"
                android:listSelector="#00000000"/>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/commit_area"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/gffffff"
        android:paddingLeft="12dp" >

        <CheckBox
            android:id="@+id/cb_anonymous"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/chk_apply_babylist_item_selector"
            android:button="@null"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/cb_anonymous"
            android:gravity="center"
            android:text="匿名评价"
            android:textColor="@color/g999999"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_evaluate"
			android:background="@color/com_orange"
            android:layout_width="120dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="发表评价"
            android:textColor="@color/gffffff"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>