<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/rv_firsthead"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/area_top_bar_space"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/transparent"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/top_bar"
            style="@style/topbar_area_style"
            android:background="@color/transparent">

            <RelativeLayout
                android:id="@+id/serach_area"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/area_right_scan"
                android:layout_toRightOf="@+id/area_left"
                android:background="@drawable/rec_white_stroke_white_solid_corner30"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/edit_sousuo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="更多有趣内容就在61区"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLength="30"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:singleLine="true"
                    android:textColor="@color/g333333"
                    android:textColorHint="@color/g999999"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/img_sousuo"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/xiaosousuo" />

                <ImageView
                    android:id="@+id/img_del"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/shanchu"
                    android:visibility="invisible" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/area_right_scan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/area_msg"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_scan"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="@dimen/com_border_margin"
                    android:src="@drawable/icon_scan_white" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/area_msg"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp">

                <ImageView
                    android:id="@+id/img_msg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_msg_white" />

                <TextView
                    android:id="@+id/tv_msg_remind"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/circle_shape_white"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:clickable="true"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/area_sticky_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:id="@+id/area_sticky_top_space"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/transparent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <HorizontalScrollView
                android:id="@+id/hscrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/area_feilei"
                android:background="@color/gffffff"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/hscrollview_linear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/area_feilei"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/gffffff"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_fenlei"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/icon_home_tab_fenlei" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/area_gv_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            android:orientation="vertical"
            android:visibility="gone">

            <GridView
                android:id="@+id/gv_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/com_border_margin"
                android:layout_marginRight="@dimen/com_border_margin"
                android:horizontalSpacing="15dp"
                android:listSelector="#00000000"
                android:numColumns="4"
                android:paddingBottom="30dp"
                android:paddingTop="25dp"
                android:verticalSpacing="25dp" />
        </LinearLayout>
        <View style="@style/between_line"/>
    </LinearLayout>
</RelativeLayout>