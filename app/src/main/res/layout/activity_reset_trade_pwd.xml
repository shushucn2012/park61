<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style">

        <Button
            android:id="@+id/left_img"
            style="@style/topbar_leftbtn_style"
            android:visibility="visible" />

        <TextView
            style="@style/topbar_title_style"
            android:text="账户安全" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            style="@style/text_66614_style"
            android:text="请选择以下任意一种方式进行身份验证" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/know_pwd_area"
            style="@style/me_item_area_style"
            android:layout_height="44dp">

            <TextView
                style="@style/text_33314_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="我记得原交易密码"
                android:textSize="15sp" />

            <ImageView style="@style/setting_item_arrow_style" />
        </RelativeLayout>

        <View
            style="@style/hline_fill"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp" />

        <RelativeLayout
            android:id="@+id/unknow_pwd_area"
            style="@style/me_item_area_style"
            android:layout_height="44dp">

            <TextView
                style="@style/text_33314_style"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="我忘记交易密码了"
                android:textSize="15sp" />

            <ImageView style="@style/setting_item_arrow_style" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>