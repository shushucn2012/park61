<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gffffff"
    >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/gffffff"
	    android:orientation="vertical" >
	
	    <RelativeLayout
	        android:id="@+id/top_bar"
	        style="@style/topbar_area_style" >
	
	        <Button
	            android:id="@+id/left_img"
	            style="@style/topbar_leftbtn_style"
	            android:visibility="visible" />
	
	        <TextView
	            android:id="@+id/sale_title"
	            style="@style/topbar_title_style"
	            android:text="售后详情" />
			<View
				style="@style/hline_fill_top"
				android:layout_alignParentBottom="true"/>

	    </RelativeLayout>
	
	    <TextView
	        android:id="@+id/sales_close_tv"
	        android:layout_width="match_parent"
	        android:layout_height="35dp"
	        android:background="@color/gffffff"
	        android:gravity="center"
	        android:paddingLeft="16dp"
	        android:text="售后已关闭！"
	        android:textColor="@color/com_orange"
	        android:textSize="16sp" />
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/gffffff"
	        android:orientation="horizontal" >
	
	        <View
	            android:layout_width="3dp"
	            android:layout_height="12dp"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="12dp"
	            android:background="@color/com_orange" />
	
	        <TextView
	            android:id="@+id/sales_after_detail"
	            style="@style/text_66616_style"
	            android:background="@color/gffffff"
	            android:gravity="center_vertical"
	            android:paddingLeft="5dp"
	            android:text="售后详情" />
	    </LinearLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="38dp"
			android:background="@color/gffffff" >

			<TextView
				android:id="@+id/tv_close"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="14dp"
				android:background="@color/gffffff"
				android:gravity="center"
				android:paddingLeft="5dp"
				android:paddingTop="13dp"
				android:text="关闭原因"
				android:textColor="@color/g999999"
				android:textSize="14sp" />

			<TextView
				android:id="@+id/close_reason_value"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="14dp"
				android:layout_toRightOf="@+id/tv_close"
				android:background="@color/gffffff"
				android:gravity="center"
				android:paddingTop="13dp"
				android:text=""
				android:textColor="@color/g333333"
				android:textSize="14sp" />
		</RelativeLayout>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/gffffff" >

			<TextView
				android:id="@+id/tv_close_time"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="14dp"
				android:background="@color/gffffff"
				android:gravity="center"
				android:paddingLeft="5dp"
				android:text="关闭时间"
				android:textColor="@color/g999999"
				android:textSize="14sp" />

			<TextView
				android:id="@+id/close_time_value"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="14dp"
				android:layout_toRightOf="@+id/tv_close_time"
				android:background="@color/gffffff"
				android:gravity="center"
				android:text=""
				android:textColor="@color/g333333"
				android:textSize="14sp" />
		</RelativeLayout>
		<View style="@style/hline_fill"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="12dp"
			android:layout_marginRight="12dp"/>
	
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="38dp"
	        android:background="@color/gffffff" >
	
	        <TextView
	            android:id="@+id/sales_type_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="14dp"
	            android:background="@color/gffffff"
	            android:gravity="center"
	            android:paddingLeft="5dp"
	            android:paddingTop="13dp"
	            android:text="售后类型"
	            android:textColor="@color/g999999"
	            android:textSize="14sp" />
	
	        <TextView
	            android:id="@+id/sales_type_value"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="14dp"
	            android:layout_toRightOf="@+id/sales_type_tv"
	            android:background="@color/gffffff"
	            android:gravity="center"
	            android:paddingTop="13dp"
	            android:text="退货退款"
	            android:textColor="@color/g333333"
	            android:textSize="14sp" />
	    </RelativeLayout>
	
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="25dp"
	        android:background="@color/gffffff" >
	
	        <TextView
	            android:id="@+id/refund_reason_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="14dp"
	            android:background="@color/gffffff"
	            android:gravity="center"
	            android:paddingLeft="5dp"
	            android:text="退款原因"
	            android:textColor="@color/g999999"
	            android:textSize="14sp" />
	
	        <TextView
	            android:id="@+id/refund_reason_value"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="14dp"
	            android:layout_toRightOf="@+id/refund_reason_tv"
	            android:background="@color/gffffff"
	            android:gravity="center"
	            android:text=""
	            android:textColor="@color/g333333"
	            android:textSize="14sp" />
	    </RelativeLayout>
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="25dp"
			android:background="@color/gffffff" >

			<TextView
				android:id="@+id/regoods_amount_tv"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="14dp"
				android:background="@color/gffffff"
				android:gravity="center"
				android:paddingLeft="5dp"
				android:text="退货件数"
				android:textColor="@color/g999999"
				android:textSize="14sp" />

			<TextView
				android:id="@+id/regoods_amount_value"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="14dp"
				android:layout_toRightOf="@+id/regoods_amount_tv"
				android:background="@color/gffffff"
				android:gravity="center"
				android:text=""
				android:textColor="@color/g333333"
				android:textSize="14sp" />
		</RelativeLayout>
	
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="25dp"
	        android:background="@color/gffffff" >
	
	        <TextView
	            android:id="@+id/refund_amount_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="14dp"
	            android:background="@color/gffffff"
	            android:gravity="center"
	            android:paddingLeft="5dp"
	            android:text="退款金额"
	            android:textColor="@color/g999999"
	            android:textSize="14sp" />
	
	        <TextView
	            android:id="@+id/refund_amount_value"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="14dp"
	            android:layout_toRightOf="@+id/refund_amount_tv"
	            android:background="@color/gffffff"
	            android:gravity="center"
	            android:text=""
	            android:textColor="@color/g333333"
	            android:textSize="14sp" />
	    </RelativeLayout>
	
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:background="@color/gffffff" >
	
	        <TextView
	            android:id="@+id/detail_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="14dp"
	            android:background="@color/gffffff"
	            android:gravity="center"
	            android:paddingLeft="5dp"
	            android:text="详细说明"
	            android:textColor="@color/g999999"
	            android:textSize="14sp" />
	
	        <TextView
	            android:id="@+id/detail_value"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="14dp"
	            android:layout_toRightOf="@+id/detail_tv"
	            android:background="@color/gffffff"
	            android:minLines="3"
	            android:text=""
	            android:textColor="@color/g333333"
	            android:textSize="14sp" />
	    </RelativeLayout>
	
	    <RelativeLayout
	        android:visibility="gone"
	        android:layout_width="match_parent"
	        android:layout_height="60dp"
	        android:background="@color/gffffff" >
	
	        <TextView
	            android:id="@+id/proof_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="14dp"
	            android:background="@color/gffffff"
	            android:gravity="center"
	            android:paddingLeft="5dp"
	            android:text="上传凭证"
	            android:textColor="@color/g999999"
	            android:textSize="14sp" />
	
	        <GridView
	            android:id="@+id/gv_input_pic"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@color/gffffff"
	            android:columnWidth="80dp"
	            android:horizontalSpacing="10dp"
	            android:numColumns="4"
	            android:padding="10dp"
	            android:stretchMode="columnWidth"
	            android:verticalSpacing="10dp" 
	            android:layout_toRightOf="@+id/proof_tv"
	            />
	    </RelativeLayout>

		<View
			style="@style/hline_fill"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"/>
	
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="35dp"
	        android:background="@color/gffffff"
	        android:paddingTop="10dp" >
	
	        <TextView
	            android:id="@+id/sales_after_number_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="14dp"
	            android:background="@color/gffffff"
	            android:gravity="center"
	            android:paddingLeft="5dp"
	            android:text="售后单号"
	            android:textColor="@color/g999999"
	            android:textSize="14sp" />
	
	        <TextView
	            android:id="@+id/sales_after_number_value"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="14dp"
	            android:layout_toRightOf="@+id/sales_after_number_tv"
	            android:background="@color/gffffff"
	            android:gravity="center"
	            android:text=""
	            android:textColor="@color/g333333"
	            android:textSize="14sp" />
	    </RelativeLayout>
	
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="25dp"
	        android:background="@color/gffffff" >
	
	        <TextView
	            android:id="@+id/request_time_tv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="14dp"
	            android:background="@color/gffffff"
	            android:gravity="center"
	            android:paddingLeft="5dp"
	            android:text="申请时间"
	            android:textColor="@color/g999999"
	            android:textSize="14sp" />
	
	        <TextView
	            android:id="@+id/request_time_value"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="14dp"
	            android:layout_toRightOf="@+id/request_time_tv"
	            android:background="@color/gffffff"
	            android:gravity="center"
	            android:text=""
	            android:textColor="@color/g333333"
	            android:textSize="14sp" />
	    </RelativeLayout>
	
	
	    <TextView
	        android:id="@+id/sales_after_policy"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@color/gffffff"
	        android:gravity="right"
	        android:text="售后政策"
	        android:paddingRight="12dp"
	        android:paddingTop="5dp"
	        android:textColor="@color/com_orange"
	        android:textSize="14sp" />
	</LinearLayout>
</ScrollView>	