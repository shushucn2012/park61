<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:background="@color/gffffff">

    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_edit"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_traveller_name"
        style="@style/text_33314_style"
        android:layout_toRightOf="@id/img_edit"
        android:layout_marginLeft="10dp"
        android:layout_width="50dp"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:text="姓名"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_traveller_name"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/tv_paper_type"
            style="@style/text_33314_style"
            android:text="证件类型" />

        <TextView
            android:id="@+id/tv_paper_no"
            style="@style/text_33314_style"
            android:text="证件号码" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/chk"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/chk_apply_babylist_item_selector"
        android:button="@null" />

</RelativeLayout>