<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top_bar"
            style="@style/topbar_area_style">

            <Button
                android:id="@+id/left_img"
                style="@style/topbar_leftbtn_style"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_top_title"
                style="@style/topbar_title_style"
                android:text="开通会员" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_open_member"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/kaitonghuiyuantupian_bg" />

        <RelativeLayout
            android:id="@+id/area_right"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/gffffff">

            <TextView
                style="@style/text_33314_style"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="会员特权" />

            <TextView
                style="@style/text_33312_style"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/img_downarrow"
                android:text="更多" />

            <ImageView
                android:id="@+id/img_downarrow"
                style="@style/mem_item_arrow_style"
                android:layout_marginRight="12dp" />
        </RelativeLayout>

        <View
            style="@style/hline_fill" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/gffffff"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/area_free"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/mianfeiwan_member" />

                <TextView
                    style="@style/text_33312_style"
                    android:layout_marginTop="8dp"
                    android:text="免费玩" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_general"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/quanguotongyong_member" />

                <TextView
                    style="@style/text_33312_style"
                    android:layout_marginTop="8dp"
                    android:text="全国通用" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_coupon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/daijinquan_member" />

                <TextView
                    style="@style/text_33312_style"
                    android:layout_marginTop="8dp"
                    android:text="代金券" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_fenhong"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/fenhong_member" />

                <TextView
                    style="@style/text_33312_style"
                    android:layout_marginTop="8dp"
                    android:text="分红" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/area_giftbag"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/youxilibao_member" />

                <TextView
                    style="@style/text_33312_style"
                    android:layout_marginTop="8dp"
                    android:text="游戏礼包" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bg_color" />

        <RelativeLayout
            android:id="@+id/area_my_service"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/gffffff"
            android:gravity="center_vertical">

            <TextView
                style="@style/text_33314_style"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:text="我的服务" />

            <TextView
                style="@style/text_99912_style"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:text="消费明细" />
        </RelativeLayout>

        <View
            style="@style/hline_fill"/>

        <com.park61.widget.list.ListViewForScrollView
            android:id="@+id/lv_cardtype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/line"
            android:layout_marginTop="1dp"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/transparent"
            android:dividerHeight="0dp"
            android:listSelector="@color/transparent" />
    </LinearLayout>
</ScrollView>