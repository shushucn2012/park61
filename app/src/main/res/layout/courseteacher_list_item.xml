<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <com.park61.widget.circleimageview.CircleImageView
            android:id="@+id/img_teacher"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:src="@drawable/headimg_default_img" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_teacher_name"
                style="@style/text_33314_style"
                android:text="123" />

            <TextView
                android:id="@+id/tv_zili"
                style="@style/text_99912_style"
                android:singleLine="true"
                android:layout_marginTop="3dp"
                android:text="123" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_teacher_resume"
        style="@style/text_66613_style"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:text="1231321" />

</LinearLayout>