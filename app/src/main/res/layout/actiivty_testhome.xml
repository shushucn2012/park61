<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_title"
        style="@style/AppTitle_Layout">

        <TextView
            android:id="@+id/tv_title"
            style="@style/AppTitle_TextView"
            android:text="测评" />

        <ImageView
            android:id="@+id/iv_back"
            style="@style/AppTitle_BackView"
            android:contentDescription="@null"
            android:src="@drawable/icon_red_backimg" />

        <TextView
            android:id="@+id/tv_hisresult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="历史结果"
            android:textColor="@color/color_text_red_deep"
            android:textSize="16dp" />

        <View
            style="@style/hline_fill_top"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/test_hometop">

                <com.park61.widget.circleimageview.CircleImageView
                    android:id="@+id/icon_user"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/icon_user" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="36dp"
                    android:layout_toRightOf="@+id/icon_user"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_logstate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLength="4"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/color_text_red_deep"
                            android:textSize="18sp" />

                        <ImageView
                            android:id="@+id/iv_addbaby"
                            android:layout_width="72dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/add_baby"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/iv_changebaby"
                            android:layout_width="72dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/change_icon"
                            android:visibility="gone" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_warm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_toRightOf="@+id/icon_user"
                        android:text=""
                        android:textColor="@color/g999999"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/tv_testbaby"
                    android:layout_width="92dp"
                    android:layout_height="46dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/test_child" />

            </RelativeLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.01"
                android:gravity="center_vertical"
                android:text="推荐测评"
                android:textColor="@color/bdp_dark_gray"
                android:textSize="18dp" />

            <com.park61.widget.list.ListViewForScrollView
                android:id="@+id/rv_firsthead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:divider="#00000000" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>