<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/gffffff"
    android:minHeight="80dp" >

    <ImageView
        android:id="@+id/img_chioce"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:focusable="false"
        android:scaleType="fitXY"
        android:src="@drawable/choice_selector" />

    <LinearLayout
        android:id="@+id/addr_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@+id/img_chioce"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gffffff" >

            <TextView
                android:id="@+id/browse_stote_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/gffffff"
                android:text="61区大河春天店"
                android:textColor="@color/g333333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/distance_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:text="距您200km"
                android:textColor="@color/g333333"
                android:textSize="14sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/address_tv"
            style="@style/text_99914_style"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="地址: 武汉市江夏区纸坊北小区A1栋14楼" />
        <TextView
            android:id="@+id/phone_tv"
            style="@style/text_99914_style"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="电话: 18712345678" />
    </LinearLayout>
    <View
        style="@style/hline_fill"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>
</RelativeLayout>