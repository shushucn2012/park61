<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/white_to_red_selector"
    android:gravity="center_vertical"
    android:minHeight="90dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/baby_area"
        android:layout_width="match_parent"
        android:layout_height="90dp" >

        <com.park61.widget.circleimageview.CircleImageView
            android:id="@+id/img_baby"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/headimg_default_img" />
        <RelativeLayout
            android:layout_toRightOf="@id/img_baby"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/area_info"
            android:layout_marginTop="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_name"
                style="@style/text_33314_style"
                android:text="小豆豆"
                />

            <ImageView
                android:id="@+id/img_vip_card"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/huiyuanka_xiaotubiao" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_select"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="12dp"
                android:scaleType="fitXY"
                android:src="@drawable/xuanze_focus" />
        </RelativeLayout>
        <TextView
            android:layout_below="@+id/area_info"
            android:id="@+id/tv_age"
            style="@style/text_99912_style"
            android:layout_marginTop="5dp"
            android:text="5岁9个月"
            />
        </RelativeLayout>
    </RelativeLayout>

    <View
        style="@style/hline_fill"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>

</LinearLayout>