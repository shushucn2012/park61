<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style">
        <Button
            android:id="@+id/left_img"
            style="@style/topbar_leftbtn_style"/>
        <TextView
            style="@style/topbar_title_style"
            android:text="交易成功"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/com_orange"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/jiaoyichenggong2" />

            <TextView
                style="@style/text_33314_style"
                android:layout_marginTop="8dp"
                android:text="交易成功"
                android:textColor="@color/gffffff" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/gffffff"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:visibility="gone"
            android:id="@+id/btn_evaluate"
            android:layout_width="132dp"
            android:layout_height="32dp"
            android:text="立即评价"
            android:background="@drawable/rectangle_shape_bg_white_stroke_grey"
            android:textColor="@color/g222222"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_orderdetail"
            android:layout_width="132dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:text="订单详情"
            android:background="@drawable/rectangle_shape_bg_white_stroke_grey"
            android:textColor="@color/g222222"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
