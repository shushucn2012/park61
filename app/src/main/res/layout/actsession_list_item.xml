<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gffffff"
    android:minHeight="60dp" >

    <TextView
        android:id="@+id/tv_act_date"
        style="@style/text_33314_style"
        android:layout_centerVertical="true"
        android:text="4月28日 16:00 - 16:50" />

    <Button
        android:id="@+id/btn_choose_session"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rec_lightgray_stroke_trans_solid"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="￥30\n选择场次"
        android:textColor="@color/com_orange"
        android:textSize="14sp" />

</RelativeLayout>