<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_btn_rec"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style"
        android:background="@color/transparent">

        <LinearLayout
            android:id="@+id/area_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/icon_back_white" />
        </LinearLayout>

        <TextView
            android:id="@+id/page_title"
            style="@style/text_fff18_style"
            android:layout_centerInParent="true"
            android:text="我的证书" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/wodezhengshu"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_33314_style"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:text="官方认证证书"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/tv_name"
                style="@style/text_33316_style"
                android:layout_marginLeft="48dp"
                android:text=""
                android:textStyle="bold" />


            <TextView
                style="@style/text_33314_style"
                android:layout_below="@+id/tv_name"
                android:layout_marginLeft="66dp"
                android:layout_marginRight="66dp"
                android:layout_marginTop="16dp"
                android:text="恭喜您成为61区官方认证用户，感谢您对我们的认可" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/area_org"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/area_time"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="48dp">

            <TextView
                android:id="@+id/tv_org_label"
                style="@style/text_99913_style"
                android:text="颁发机构" />

            <TextView
                android:id="@+id/tv_org"
                style="@style/text_33313_style"
                android:layout_marginLeft="8dp"
                android:text="61区官方" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="48dp">

            <TextView
                android:id="@+id/tv_time_label"
                style="@style/text_99913_style"
                android:text="颁发时间" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/text_33313_style"
                android:layout_marginLeft="8dp"
                android:text="" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>