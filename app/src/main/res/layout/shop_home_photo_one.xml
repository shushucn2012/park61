<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/area_photos_one"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp">

    <ImageView
        android:id="@+id/img_photo_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default_h" />

    <TextView
        android:id="@+id/tv_photo_one_title"
        style="@style/text_fff13_style"
        android:singleLine="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:text="" />

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:alpha="0.8"
        android:background="#333333"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/text_fff12_style"
            android:text="人气" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="2dp"
            android:background="@color/gffffff" />

        <TextView
            android:id="@+id/tv_photo_one_num"
            style="@style/text_fff16_style"
            android:text=""
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>