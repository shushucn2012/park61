<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <View style="@style/between_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/com_border_margin"
        android:paddingRight="@dimen/com_border_margin"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@color/white"
        >

        <FrameLayout
            android:id="@+id/flyt"
            android:layout_width="36dp"
            android:layout_height="36dp">
            
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="3dp"
                android:src="@drawable/img_default_v"
                />
            <ImageView
                android:id="@+id/play_state"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/icon_play"
                android:layout_gravity="center"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toRightOf="@id/flyt"
            android:layout_marginLeft="10dp"
            style="@style/text_22215_style"
            android:text="潜能开发第一讲：潜能开发教学系统"
            android:layout_marginRight="56dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/title"
            android:layout_marginTop="6dp"
            android:layout_alignLeft="@id/title"
            android:layout_alignRight="@id/title"
            >

            <TextView
                android:id="@+id/download_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_99912_style"
                android:text="2018-01-26 17:24"
                />

            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_99912_style"
                android:text="04:24"
                android:layout_marginLeft="24dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/operate"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_more"
                />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>