<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style" >

        <Button
            android:id="@+id/left_img"
            style="@style/topbar_leftbtn_style"
            android:visibility="visible" />

        <TextView
            style="@style/topbar_title_style"
            android:text="优惠券" />

        <TextView
            android:id="@+id/tv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="使用帮助"
            android:textColor="@color/com_orange"
            android:textSize="14sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_coupon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_confirm"
        android:layout_below="@id/top_bar"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/gffffff"
        android:dividerHeight="1dp"
        android:listSelector="@color/transparent" />
    <Button
        android:id="@+id/btn_confirm"
        style="@style/btn_bottom_style"
        android:layout_height="45dp"
        android:text="确定"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>