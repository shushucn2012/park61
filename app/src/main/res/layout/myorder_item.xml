<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp">
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        android:paddingRight="12dp"
    	android:paddingLeft="12dp"
        android:background="@color/gffffff"
        >
        
        <TextView
            android:id="@+id/tv_order_id"
            style="@style/text_99914_style"
            android:layout_centerVertical="true"
            android:text="订单编号：1324142342" />
        
        <TextView
            android:id="@+id/tv_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/com_orange"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:text="等待付款" />
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/bg_color"
        android:layout_marginLeft="5dp"
    	android:layout_marginRight="5dp"
        />
    <LinearLayout
        android:id="@+id/lay_goods"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical"
        android:background="@color/gffffff"
        android:paddingRight="5dp"
    	android:paddingLeft="5dp"
        
        >
        
    </LinearLayout>
	<RelativeLayout 
	    android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/gffffff"
        android:paddingRight="12dp"
    	android:paddingLeft="12dp"
	    >
	    <TextView
	        android:id="@+id/tv1"
            style="@style/text_99914_style"
            android:text="实付金额："
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
	    <TextView
	        android:id="@+id/tv_real_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/com_orange"
            android:textSize="14sp"
            android:text="44.44" 
            android:layout_toRightOf="@id/tv1"
            android:layout_centerVertical="true"/>
	    
	    <LinearLayout 
	        android:layout_alignParentRight="true"
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
	        >
	        <Button
		        android:id="@+id/btn1"
	            style="@style/text_99914_style"
	            android:text="查看物流" 
	            android:background="@drawable/btn_order_cancel_selector"
	            android:textColor="@color/g666666"
	            android:paddingLeft="5dp"
	            android:paddingRight="5dp"
	            android:paddingTop="3dp"
	            android:paddingBottom="3dp"
	            android:focusable="false"
	            android:layout_marginRight="10dp"/>
		    <Button
		        android:id="@+id/btn2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/btn_order_pay_selector"
	            android:textColor="@color/com_orange"
	            android:textSize="14sp"
	            android:text="  付款  " 
	            android:paddingLeft="5dp"
	            android:paddingRight="5dp"
	            android:paddingTop="3dp"
	            android:paddingBottom="3dp"
	            android:focusable="false"/>
	    </LinearLayout>
	    
	    
	</RelativeLayout>
</LinearLayout>
