<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gaaaaaa" >

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/left_img"
            style="@style/topbar_leftbtn_style" />

        <TextView
            android:id="@+id/txt_title"
            style="@style/topbar_title_style"
            android:text="" />

        <LinearLayout
            android:id="@+id/right_img"
            style="@style/topbar_rightbtn_style"
            android:layout_width="55dp"
            android:gravity="center_vertical|right" >

            <TextView
                android:id="@+id/txt_toolbar_save"
                style="@style/text_33314_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保存" />
        </LinearLayout>
        <View
            style="@style/hline_fill_top"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/newspaper_body_view_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/top_bar"
        android:layout_centerInParent="true"
        android:scrollbars="horizontal" />

</RelativeLayout>