<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="leftClick"
            type="android.view.View.OnClickListener" />

        <variable
            name="rightClick"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical">

        <RelativeLayout style="@style/topbar_area_style">

            <Button
                android:id="@+id/left_img"
                style="@style/topbar_leftbtn_style" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <RelativeLayout
                    android:id="@+id/downloaded_rlyt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:onClick="@{leftClick}">

                    <TextView
                        android:id="@+id/left_tv"
                        style="@style/text_22216_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="已下载" />

                    <View
                        android:id="@+id/line_1"
                        android:layout_width="42dp"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/color_text_red_deep"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="42dp"
                    android:layout_toRightOf="@id/downloaded_rlyt"
                    android:onClick="@{rightClick}">

                    <TextView
                        android:id="@+id/right_tv"
                        style="@style/text_22216_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="下载中" />

                    <View
                        android:id="@+id/line2"
                        android:layout_width="42dp"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/color_text_red_deep"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                style="@style/hline_fill_top"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

    </LinearLayout>
</layout>