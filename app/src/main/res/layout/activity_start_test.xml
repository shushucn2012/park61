<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eece85"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style">

        <Button
            android:id="@+id/left_img"
            style="@style/topbar_leftbtn_style"
            android:visibility="visible" />

        <TextView
            style="@style/topbar_title_style"
            android:text="多元测评" />

        <TextView
            android:id="@+id/tv_right"
            style="@style/topbar_rightbtn_style"
            android:gravity="center_vertical|right"
            android:textColor="@color/color_text_red_deep"
            android:textSize="14sp"
            android:text="分享"
            android:visibility="visible" />

        <View
            style="@style/hline_fill_top"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <View
        android:id="@+id/area_bg_top"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/top_bar"
        android:background="@drawable/ziyuan" />

    <LinearLayout
        android:id="@+id/details_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_start"
        android:layout_below="@+id/area_bg_top"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/rec_white_stroke_white_solid"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:id="@+id/img_baby"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/headimg_default_img" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/img_baby"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_baby_name"
                    style="@style/text_33314_style"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_baby_age"
                    style="@style/text_99912_style"
                    android:text="" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_qiehuan"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_qiehuan"/>
        </RelativeLayout>


        <TextView
            style="@style/text_33315_style"
            android:textColor="@color/color_text_red_deep"
            android:layout_marginTop="25dp"
            android:text="测评说明"/>

        <WebView
            android:id="@+id/webview"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rec_deepred_stroke_deepred_solid_corner30"
        android:text="开始测评"
        android:textColor="@color/gffffff"
        android:textSize="18sp" />

</RelativeLayout>