<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/gffffff">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default_h" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_item"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                style="@style/text_33316_style"
                android:singleLine="true"
                android:text="DAP多元智慧发展评测" />

            <TextView
                android:id="@+id/tv_age"
                style="@style/text_33313_style"
                android:layout_marginTop="2dp"
                android:text="适合年龄：3-6岁" />

            <TextView
                android:id="@+id/tv_question_num"
                style="@style/text_99913_style"
                android:layout_marginTop="2dp"
                android:text="共55题，预计5分钟" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <TextView
                    style="@style/text_99913_style"
                    android:text="目前有" />

                <TextView
                    android:id="@+id/tv_child_num"
                    style="@style/text_99913_style"
                    android:text="999"
                    android:textColor="@color/color_text_red_deep" />

                <TextView
                    style="@style/text_99913_style"
                    android:text="位小朋友完成测评" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_color" />
</LinearLayout>