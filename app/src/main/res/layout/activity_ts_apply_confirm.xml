<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/top_bar"
        layout="@layout/topbar_com" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_66614_style"
            android:layout_marginLeft="12dp"
            android:text="计费规则" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/gffffff"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/shenqing" />

            <TextView
                style="@style/text_33314_style"
                android:layout_marginTop="10dp"
                android:text="确认申请" />

            <TextView
                style="@style/text_99912_style"
                android:layout_marginTop="8dp"
                android:text="核对信息" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/lingqu" />

            <TextView
                style="@style/text_33314_style"
                android:layout_marginTop="10dp"
                android:text="到店领取" />

            <TextView
                style="@style/text_99912_style"
                android:layout_marginTop="8dp"
                android:text="开始计费" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/guihuan" />

            <TextView
                style="@style/text_33314_style"
                android:layout_marginTop="10dp"
                android:text="到店归还" />

            <TextView
                style="@style/text_99912_style"
                android:layout_marginTop="8dp"
                android:text="停止计费" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical">

        <TextView
            style="@style/text_66614_style"
            android:layout_marginLeft="12dp"
            android:text="领取地址" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/addr_area"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/gffffff">

        <LinearLayout
            android:id="@+id/details_addr_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/img_arrow"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gffffff">

                <TextView
                    android:id="@+id/browse_name_tv"
                    style="@style/text_33316_style"
                    android:layout_centerVertical="true"
                    android:text="" />

                <TextView
                    android:id="@+id/browse_number_tv"
                    style="@style/text_33316_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:text="" />
            </RelativeLayout>

            <TextView
                android:id="@+id/browse_address_tv"
                style="@style/text_66614_style"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="" />
        </LinearLayout>

        <ImageView
            android:id="@id/img_arrow"
            style="@style/me_item_arrow_style"
            android:layout_marginRight="12dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/addr_img"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/addr_img" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:background="@color/gffffff"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_toy"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default_v" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_toy_name"
                style="@style/text_66614_style"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:id="@+id/area_per_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        style="@style/text_org16_style"
                        android:text="每天" />

                    <TextView
                        android:id="@+id/tv_share_price"
                        style="@style/text_org16_style"
                        android:text="1"
                        android:textSize="24sp" />

                    <TextView
                        style="@style/text_org16_style"
                        android:text="块钱" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_real_price"
                    style="@style/text_99912_style"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/area_per_price"
                    android:paddingTop="8dp"
                    android:text="￥" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        style="@style/btn_com_style"
        android:text="确认申请" />

</LinearLayout>