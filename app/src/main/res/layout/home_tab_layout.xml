<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/gffffff"
            android:orientation="vertical">

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="0dip"
                android:layout_weight="1"></FrameLayout>

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <View style="@style/hline_fill_top" />

            <RadioGroup
                android:id="@+id/main_group"
                android:layout_width="fill_parent"
                android:layout_height="44dp"
                android:layout_gravity="bottom"
                android:background="@color/gffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="3dp">

                <RadioButton
                    android:id="@+id/radio_button_main"
                    style="@style/main_tab_bottom"
                    android:checked="true"
                    android:drawablePadding="2dp"
                    android:drawableTop="@drawable/shouye_selector"
                    android:text="首页"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/radio_button_home"
                    style="@style/main_tab_bottom"
                    android:drawablePadding="2dp"
                    android:drawableTop="@drawable/leyuan_selector"
                    android:text="乐园"
                    android:textSize="10sp"
                    android:visibility="gone"/>

                <RadioButton
                    android:id="@+id/radio_button_grow"
                    style="@style/main_tab_bottom"
                    android:drawablePadding="2dp"
                    android:drawableTop="@drawable/grow_selector"
                    android:text="日记"
                    android:textSize="10sp" />

                <RadioButton
                    android:id="@+id/radio_button_sales"
                    style="@style/main_tab_bottom"
                    android:drawablePadding="2dp"
                    android:drawableTop="@drawable/sales_selector"
                    android:text="特卖"
                    android:textSize="10sp"
                    android:visibility="visible" />

                <RadioButton
                    android:id="@+id/radio_button_me"
                    style="@style/main_tab_bottom"
                    android:drawablePadding="2dp"
                    android:drawableTop="@drawable/me_selector"
                    android:text="我的"
                    android:textSize="10sp" />
            </RadioGroup>
        </LinearLayout>
    </TabHost>

    <RelativeLayout
        android:id="@+id/grow_view_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginLeft="106dp"
            android:layout_marginTop="508dp"
            android:scaleType="fitXY"
            android:src="@drawable/lpydye" />
    </RelativeLayout>

</RelativeLayout>