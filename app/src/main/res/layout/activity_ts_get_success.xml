<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style">

        <TextView
            android:id="@+id/page_title"
            style="@style/topbar_title_style"
            android:text="领取成功" />

        <Button
            android:id="@+id/right_img"
            style="@style/topbar_rightbtn_style"
            android:paddingRight="0dp"
            android:text="完成" />

        <View
            style="@style/hline_fill_top"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:background="@color/gffffff">

        <ImageView
            android:id="@+id/img_toy"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default_h" />

        <TextView
            android:id="@+id/tv_toy_name"
            style="@style/text_33316_style"
            android:layout_below="@id/img_toy"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:singleLine="true"
            android:text="三岁宝宝 右脑潜能开发" />

        <ImageView
            android:id="@id/img_success"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/lqchenggong" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/gffffff"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="@color/colorLine" />

            <TextView
                style="@style/text_33314_style"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="一起玩 更好玩" />

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="@color/colorLine" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_share_one"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_fx_pyqs"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/fxpengyouquan" />

            <TextView
                style="@style/text_66614_style"
                android:text="（分享朋友圈 " />

            <TextView
                style="@style/text_red14_style"
                android:text="免费一整天）" />

            <TextView
                style="@style/text_99912_style"
                android:layout_marginLeft="50dp"
                android:text="更多" />

            <ImageView
                android:id="@+id/img_more_share"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/gengduo2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_share_more"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_fx_pyq"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="24dp"
                android:src="@drawable/fxpengyouquan" />

            <ImageView
                android:id="@+id/img_fx_qq"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="24dp"
                android:src="@drawable/fxqq" />

            <ImageView
                android:id="@+id/img_fx_qzone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="24dp"
                android:src="@drawable/fxkongjian" />

            <ImageView
                android:id="@+id/img_fx_wx"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/fxweixin" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>