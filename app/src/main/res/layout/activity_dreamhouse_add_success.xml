<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style">

        <Button
            android:id="@+id/left_img"
            style="@style/topbar_leftbtn_style" />

        <TextView
            style="@style/topbar_title_style"
            android:text="加入成功" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/com_orange"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/jiaoyichenggong2" />

                    <TextView
                        style="@style/text_33314_style"
                        android:layout_marginTop="8dp"
                        android:text="加入成功，去看看吧"
                        android:textColor="@color/gffffff" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/gffffff"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btn_finish"
                    android:layout_width="132dp"
                    android:layout_height="32dp"
                    android:background="@drawable/rectangle_shape_bg_white_stroke_grey"
                    android:text="完成"
                    android:textColor="@color/g222222"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_detail"
                    android:layout_width="132dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rectangle_shape_bg_white_stroke_grey"
                    android:text="查看详情"
                    android:textColor="@color/g222222"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/gffffff"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:text="推荐游戏"
                android:textColor="@color/g222222"
                android:textSize="14sp" />

            <View style="@style/hline_fill" />

            <com.park61.widget.list.ListViewForScrollView
                android:id="@+id/lv_recommend_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gffffff"
                android:cacheColorHint="@color/transparent"
                android:divider="@color/transparent"
                android:dividerHeight="0.5dp"
                android:listSelector="@color/transparent" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
