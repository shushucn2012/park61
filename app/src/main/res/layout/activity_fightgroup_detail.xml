<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style">

        <Button
            android:id="@+id/left_img"
            style="@style/topbar_leftbtn_style"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_page_title"
            style="@style/topbar_title_style"
            android:text="拼团详情" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/top_bar"
        android:background="@color/colorLine" />

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/line"
        android:background="@color/gffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/area_goods_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_bar"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:background="@color/gffffff">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_default_v" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="12dp"
                android:layout_toRightOf="@+id/icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_goods_name"
                    style="@style/text_33314_style"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_old_goods_price"
                    style="@style/text_99912_style"
                    android:layout_marginTop="5dp"
                    android:text="" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:id="@+id/tv_fight_num"
                        style="@style/text_33314_style"
                        android:layout_marginTop="5dp"
                        android:text="2人团："
                        android:textColor="@color/com_orange" />
                    <TextView
                        android:id="@+id/tv_price"
                        style="@style/text_33314_style"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textColor="@color/com_orange" />
                    <TextView
                        style="@style/text_33314_style"
                        android:layout_marginTop="5dp"
                        android:text="/1件"
                        android:textColor="@color/com_orange" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/success_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_success"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/pintuanchenggong" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fail_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_fail"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/pintuanshibai" />
        </RelativeLayout>
    </FrameLayout>

    <!--<com.fbb.gohomeplay.widget.list.HorizontalListView-->
    <!--android:id="@+id/horilistview"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="70dp"-->
    <!--android:layout_below="@+id/fl"-->
    <!--android:layout_centerInParent="true"-->
    <!--android:layout_marginLeft="105dp"-->
    <!--android:layout_marginRight="105dp"-->
    <!--android:layout_marginTop="25dp"-->
    <!--android:background="@color/bg_color" />-->
    <RelativeLayout
        android:id="@+id/area_img"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/fl"
        android:layout_marginTop="25dp"
        android:background="@color/bg_color"
        android:gravity="center">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/pintuanicon" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img1"
            android:src="@drawable/pintuanicon" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img2"
            android:src="@drawable/pintuanicon" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/area_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/area_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_state"
            style="@style/text_33314_style"
            android:layout_gravity="center_vertical"
            android:text="还差" />

        <TextView
            android:id="@+id/tv_num"
            style="@style/text_33314_style"
            android:layout_gravity="center_vertical"
            android:text="2"
            android:textColor="@color/com_orange" />

        <TextView
            android:id="@+id/tv"
            style="@style/text_33314_style"
            android:layout_gravity="center_vertical"
            android:text="人，邀请小伙伴一起入团吧" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/area_opentime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/area_num"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <TextView
            style="@style/text_33314_style"
            android:text="剩余" />

        <com.park61.widget.textview.SecTimeTextView
            android:id="@+id/tv_opentime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/g333333"
            android:text="10:21:34"
            android:textColor="@color/gffffff"
            android:textSize="16sp" />

        <TextView
            style="@style/text_33314_style"
            android:layout_marginLeft="10dp"
            android:text="结束" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_open_detail"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_below="@+id/area_opentime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_shape_solid_gray"
        android:padding="5dp"
        android:text="查看参团详情"
        android:textColor="@color/g999999"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_close_detail"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_below="@+id/btn_open_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_shape_solid_gray"
        android:padding="5dp"
        android:text="关闭参团详情"
        android:textColor="@color/g999999"
        android:textSize="12sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_below="@+id/btn_close_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/xiajiantou_default"
        android:visibility="gone" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_description"
        android:layout_below="@+id/img_arrow"
        android:layout_marginTop="10dp"
        android:background="@color/bg_color"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:listSelector="#00000000"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gffffff">

        <LinearLayout
            android:id="@+id/bottom_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_order_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rectangle_shape_gray"
                android:gravity="center"
                android:text="订单详情"
                android:textColor="@color/g666666"
                android:textSize="16sp" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/com_orange">

                <RelativeLayout
                    android:id="@+id/area_personnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/tv_personnum"
                        style="@style/text_33314_style"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:text="还差2人"
                        android:textColor="@color/gffffff" />

                    <TextView
                        android:id="@+id/tv_msg"
                        style="@style/text_33314_style"
                        android:layout_below="@+id/tv_personnum"
                        android:layout_centerHorizontal="true"
                        android:text="邀请小伙伴来参团"
                        android:textColor="@color/gffffff" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_re_fihgtgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/com_orange"
                    android:text="回到拼团，再开个团"
                    android:textColor="@color/gffffff"
                    android:textSize="16sp"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/com_orange"
            android:gravity="center"
            android:text="我要参团"
            android:textColor="@color/gffffff"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_regroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/com_orange"
            android:gravity="center"
            android:text="重新开团"
            android:textColor="@color/gffffff"
            android:textSize="16sp"
            android:visibility="gone" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/btn_area_succes"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_gohome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rectangle_shape_gray"
                android:gravity="center"
                android:text="返回首页"
                android:textColor="@color/g666666"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_orderdetail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/com_orange"
                android:gravity="center"
                android:text="订单详情"
                android:textColor="@color/gffffff"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/bottom_bar"
        android:background="@color/gffffff"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="①开团/参团支付订单    ②邀请好友    ③拼团成功    ④商家发货"
        android:textColor="@color/g999999"
        android:textSize="12sp" />
</RelativeLayout>