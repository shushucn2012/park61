<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gffffff"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/top_bar"
        style="@style/topbar_area_style">

        <Button
            android:id="@+id/left_img"
            style="@style/topbar_leftbtn_style"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_top_title"
            style="@style/topbar_title_style"
            android:text="会员卡" />
        <TextView
            android:id="@+id/tv_member_right"
            style="@style/text_66614_style"
            android:text="会员权益"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            />
        <View
            style="@style/hline_fill_top"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/area_baby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.park61.widget.list.ListViewForScrollView
                    android:id="@+id/lv_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="-2dp"
                    android:cacheColorHint="@color/transparent"
                    android:divider="@color/transparent"
                    android:dividerHeight="0dp"
                    android:listSelector="@color/transparent" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/bg_color"/>
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/block_baby"
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/empty_img_baby"
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/quexing"
                        android:textSize="15pt" />

                    <TextView
                        android:id="@+id/empty_tv_baby"
                        android:text="好冷清呀，您还没有使用记录哦"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/empty_img_baby"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/g999999"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/area_count_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_rest"
                    style="@style/text_33314_style"
                    android:text="剩余："
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center_horizontal"
                    />
                <RelativeLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_count"
                        style="@style/text_33314_style"
                        android:text=""
                        android:layout_marginTop="24dp"
                        android:textSize="30dp"
                        />
                    <TextView
                        android:id="@+id/tv_unit"
                        style="@style/text_33314_style"
                        android:text=""
                        android:textSize="20dp"
                        android:layout_toRightOf="@+id/tv_count"
                        android:layout_marginTop="32dp"
                        />
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_marginTop="15dp"
                    style="@style/text_99912_style"
                    android:text=""
                    android:layout_gravity="center"
                    />
                <Button
                    android:id="@+id/btn_recharge"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:text="充值"
                    android:background="@drawable/btn_apply_selector"
                    android:textSize="16sp"
                    android:textColor="@color/gffffff"
                    android:layout_marginBottom="17dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/bg_color"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tv_countcard_detail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_card_msg"
                    android:layout_marginLeft="12dp"
                    style="@style/text_33314_style"
                    android:text="卡明细"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

            <View
                style="@style/hline_fill"/>
            <com.park61.widget.list.ListViewForScrollView
                android:id="@+id/lv_member_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:cacheColorHint="@color/transparent"
                android:divider="@color/transparent"
                android:dividerHeight="0dp"
                android:listSelector="@color/transparent" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv"
                style="@style/text_99912_style"
                android:layout_height="40dp"
                android:layout_width="match_parent"
                android:text="只显示最近6次数据哦"
                android:gravity="center"
                android:background="@color/bg_color"
                />
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/block_detail"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/empty_img"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/quexing"
                    android:textSize="15pt" />

                <TextView
                    android:id="@+id/empty_tv"
                    android:text="好冷清呀，您还没有使用记录哦"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/empty_img"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/g999999"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

