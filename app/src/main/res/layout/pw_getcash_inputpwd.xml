<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gffffff">

    <RelativeLayout
        android:id="@+id/area_top"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/img_close_cover"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/guanbi" />

        <TextView
            style="@style/text_33314_style"
            android:layout_centerInParent="true"
            android:text="输入交易密码" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/area_input_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/area_top"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/edit_comt_selector">

        <EditText
            android:id="@+id/edit_trade_pwd"
            style="@style/edit_com_style"
            android:layout_toLeftOf="@+id/area_vline"
            android:background="@null"
            android:hint="61区交易密码"
            android:textSize="14sp"
            android:inputType="numberPassword"
            android:layout_centerVertical="true"/>

        <View
            android:id="@+id/area_vline"
            style="@style/vline_margin8"
            android:layout_toLeftOf="@+id/tv_confirm"
            android:background="@color/gcccccc" />

        <TextView
            android:id="@+id/tv_confirm"
            style="@style/text_33316_style"
            android:layout_width="80dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="确认" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/area_input_pwd"
        android:gravity="right|center"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tv_forget_pwd"
            style="@style/text_33314_style"
            android:text="忘记密码？" />
    </LinearLayout>

    <com.park61.widget.SkeyBoardPay
        android:id="@+id/keyboard_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>