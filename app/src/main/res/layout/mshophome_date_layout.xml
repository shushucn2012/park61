<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gffffff"
    android:orientation="vertical"
    android:paddingBottom="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:gravity="center">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_guess_title"
                style="@style/text_33316_style"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:text="猜你喜欢" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/area_change_guess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:gravity="center">

            <TextView
                style="@style/text_99912_style"
                android:text="换一换" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/icon_change" />
        </LinearLayout>
    </RelativeLayout>

    <com.park61.widget.gridview.GridViewForScrollView
        android:id="@+id/gv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:horizontalSpacing="10dp"
        android:listSelector="#00000000"
        android:numColumns="2"
        android:verticalSpacing="10dp" />

</LinearLayout>