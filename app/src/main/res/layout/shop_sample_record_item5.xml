<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_date"
        style="@style/text_33318_style"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="昨天" />

    <TextView
        android:id="@+id/tv_content"
        style="@style/text_33314_style"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:text="比比谁的手更巧，小小世界真奇妙，小宝宝自己动手帮小龙猫建了一个家" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_marginTop="10dp"
        android:background="@color/gffffff"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/img_sample_item0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default_h" />

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/img_sample_item1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default_h" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="115dp">

            <ImageView
                android:id="@+id/img_sample_item2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default_h" />

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/img_sample_item3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default_h" />

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/img_sample_item4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default_h" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/act_area"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:background="@color/bg_grey">

        <ImageView
            android:id="@+id/act_img"
            android:layout_width="67dp"
            android:layout_height="67dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/img_default_h" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/act_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_act_title"
                style="@style/text_33314_style"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="探秘！森林里小龙猫的家森林里小龙猫的家" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tv_act_price"
                    style="@style/text_red12_style"
                    android:text="¥89" />

                <TextView
                    android:id="@+id/tv_src_price"
                    style="@style/text_99912_style"
                    android:layout_marginLeft="10dp"
                    android:text="¥189"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_num"
            style="@style/text_99912_style"
            android:text="999个赞  999条评论  999次浏览" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/img_comment"
                android:scaleType="fitXY"
                android:src="@drawable/share_img" />

            <ImageView
                android:id="@+id/img_comment"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_toLeftOf="@+id/img_praise"
                android:scaleType="fitXY"
                android:src="@drawable/pinlun_img" />

            <ImageView
                android:id="@+id/img_praise"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:src="@drawable/mengxiangxiangqing_dianzan"
                android:visibility="invisible" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_color" />

</LinearLayout>
