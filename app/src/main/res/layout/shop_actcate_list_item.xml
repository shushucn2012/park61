<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bigcate_item_root"
    android:layout_width="match_parent"
    android:layout_height="41dp"
    android:background="@color/gffffff"
    android:minHeight="41dp" >

    <TextView
        android:id="@+id/tv_cate_name"
        style="@style/text_33316_style"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:text="品牌"
        android:textColor="@drawable/txt_gray2orange_selector" />

    <TextView
        android:id="@+id/tv_num"
        style="@style/text_99914_style"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/tv_cate_name"
        android:text="0"
        android:visibility="visible" />

    <ImageView
        style="@style/me_item_arrow_style"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp" />

</RelativeLayout>