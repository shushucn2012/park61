<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_to_red_selector"
    android:gravity="center_vertical"
    android:minHeight="61dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/activty_rlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp" >

        <TextView
            android:id="@+id/time_txt"
            style="@style/text_33314_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#4799ff" />

        <ImageView
            android:id="@+id/right_more_txt"
            style="@style/setting_item_arrow_style" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/right_more_txt"
            android:layout_toRightOf="@id/time_txt"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/address_txt"
                style="@style/text_33314_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/g333333" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" >

                <ImageView
                    android:id="@+id/address_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_map" />

                <TextView
                    android:id="@+id/desc_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     style="@style/text_33312_style"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/address_img"
                    android:text=""
                    android:textColor="@color/g666666" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#e5e5e5" />

</LinearLayout>